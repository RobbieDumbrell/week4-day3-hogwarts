<h3>NEW STUDENT</h3>

<form class="" action="/students" method="post">

  <label for="first-name">First name:</label>
  <input id="first-name" type="text" name="first_name" value="">

  <br>

  <label for="last-name">Last name:</label>
  <input id="last-name" type="text" name="last_name" value="">

  <br>

  <label for="age">Age:</label>
  <input id="age" type="number" name="age" value="">

  <br>

  <label for="house_select">Select House:</label>
  <select name="house_id" id="house_select">
    <% for house in @houses %>
    <option value="<%=house.id%>"> <%=house.name.capitalize%></option>
    <% end %>
  </select>

  <br>

  <input type="submit" name="submit" value="ENROL STUDENT">

</form>

<p><a href="/students">Student List</a></p>
